<%= partial "layouts/navbar2" %>
<div id="about">
  <div class="about-content">
    <h1>Le site internet a été crée avec <i class="fa fa-heart"></i> par</h1>
    <ul class="list-inline">
      <% data.users.each do |user| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{user.github_nickname}", target: "_blank" do %>
